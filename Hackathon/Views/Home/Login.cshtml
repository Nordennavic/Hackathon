@model object

@{
    ViewBag.Title = "Login";
    Layout = "_Layout";
}

<div class="text-center">
<form class="form-signin" action="Login" method="post">
    <img class="mb-4" src="/Resources/Img/Motiv_logo.png" alt="" width="72" height="72">
    <h1 class="h3 mb-3 font-weight-normal">Войдите в систему</h1>
    <label for="inputEmail" class="sr-only">Email address</label>
    <input type="text" name="phone" class="form-control" placeholder="Email address" required="" autofocus="">
    <label for="inputPassword" class="sr-only">Password</label>
    <input type="password" name="passwordHash" class="form-control" placeholder="Password" required="">
    <div class="checkbox mb-3">
        <label>
            <input type="checkbox" value="remember-me"> Запомнить
        </label>
    </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Войти</button>
    <p class="mt-5 mb-3 text-muted">© Hackaton - 2019</p>
</form>
</div>
