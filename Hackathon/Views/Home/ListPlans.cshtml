@model IEnumerable<Hackathon.Models.PlanParameters.PhonePlan>

@{
    ViewData["Title"] = "View";
    Layout = "_Layout";
}

<h1>View</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Абонентская плата
            </th>
            <th>
                Плата за подключеие
            </th>
            <th>
                Название
            </th>
            <th>
                Звонки на Мотив Р/Мин
            </th>
            <th>
                Пакет минут
            </th>
            <th>
                Звонки на других опреторов
            </th>
            <th>
                Звонки подключения региона подключения ГТС
            </th>
            <th>
                Звонки по России
            </th>
            <th>
                Мобильный интернет
            </th>
            <th>
                Цена СМС
            </th>
            <th>

                Количество СМС в пакете
            </th>
            <th>
                Цена ММС
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AbonentPay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrimaryPay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OnMotiv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OnMotivFix)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OnOtherOp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OnGTC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OnRF)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MobileInternet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SmsOnRF)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SmsOnRFFix)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MmsOnRF)
            </td>
            <td>
                <form asp-controller="Home" asp-action="ChangeTarif">
                    <input type="hidden" name="id" value="@item.Id"/>
                    <button class="btn btn-block">Выбрать</button>
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
